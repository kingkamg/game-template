{
	"env": {
		"browser": true
	},
	"extends": ["eslint:recommended"],
	"parserOptions": {
		"ecmaVersion": 12,
		"sourceType": "module"
	},
	"rules": {
		// === or !==
		"eqeqeq": "error",
		// 要求 for-in 循环中有一个 if 语句
		"guard-for-in": "error",
		// 4 空格缩进
		"indent": ["warn", 4],
		// 使用双引号
		"quotes": ["error", "double"],
		// 行尾空格
		"no-trailing-spaces": "warn",
		// 一行最大长度
		"max-len": ["warn", {
			"code": 160
		}],
		"no-unused-vars": "off",
		"no-undef": "off",
		// 冒号相关
		"semi": ["error", "always", {
			"omitLastInOneLineBlock": true
		}],
		"semi-spacing": "error",
		"no-extra-semi": "error",
		// 注释
		"comma-spacing": ["warn", {
			"before": false,
			"after": true
		}],
		"comma-dangle": ["error", "always-multiline"],
		"no-multiple-empty-lines": ["error", {
			"max": 2,
			"maxEOF": 1,
			"maxBOF": 1
		}],
		"line-comment-position": ["warn", {
			"position": "above"
		}],
		"spaced-comment": ["error", "always", {
			"line": {
				"markers": ["/"],
				"exceptions": ["-", "+"]
			},
			"block": {
				"markers": ["!"],
				"exceptions": ["*"],
				"balanced": true
			}
		}]
	},
	// 针对 typescript
	"overrides": [
        {
            "files": ["*.ts"],
            "plugins": ["@typescript-eslint"],
            "parser": "@typescript-eslint/parser",
            "extends": ["plugin:@typescript-eslint/recommended"],
            "rules": {
                "@typescript-eslint/explicit-module-boundary-types": "off",
                "@typescript-eslint/no-unused-vars": "off",
                "@typescript-eslint/naming-convention": ["error", {
                    "selector": "typeParameter",
                    "format": ["PascalCase"],
                    "prefix": ["T"]
                }, {
                    "selector": "variable",
                    "format": ["camelCase", "UPPER_CASE"]
                }, {
                    "selector": "interface",
                    "format": ["PascalCase"],
                    "custom": {
                        "regex": "^I[A-Z]",
                        "match": true
                    }
                }]
            }
        }
    ]
}
